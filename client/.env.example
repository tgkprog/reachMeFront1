# ReachMe Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# Backend API Configuration
# ===================================
API_BASE_URL=https://api.yourbackend.com

# ===================================
# OAuth Configuration
# ===================================

# Google OAuth (REQUIRED)
# Get from: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID (Web application type)
GOOGLE_WEB_CLIENT_ID=your-client-id.apps.googleusercontent.com

# GitHub OAuth (OPTIONAL)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth (OPTIONAL)
# Get from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id

# ===================================
# Polling Configuration
# ===================================

# Default poll interval in seconds (user can override)
DEFAULT_POLL_INTERVAL=60

# Minimum allowed poll interval (seconds)
MIN_POLL_INTERVAL=10

# Maximum allowed poll interval (seconds)
MAX_POLL_INTERVAL=180

# ===================================
# Feature Flags
# ===================================

# Enable web notifications (true/false)
ENABLE_WEB_NOTIFICATIONS=true

# Enable service worker for background push (true/false)
# Note: Service worker not yet implemented
ENABLE_SERVICE_WORKER=false

# Enable debug logging (true/false)
DEBUG_MODE=false

# ===================================
# Android Configuration
# ===================================

# Package name (should match android/app/build.gradle)
ANDROID_PACKAGE_NAME=com.reachme

# ===================================
# Web Configuration
# ===================================

# Web app port (for development)
WEB_PORT=8080

# Web app title
WEB_APP_TITLE=ReachMe

# ===================================
# Security
# ===================================

# Encryption key for local storage (auto-generated if not provided)
# STORAGE_ENCRYPTION_KEY=your-32-character-key-here

# ===================================
# Analytics (OPTIONAL)
# ===================================

# Google Analytics ID
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry DSN for crash reporting
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===================================
# Development
# ===================================

# Skip user authorization check (for development only)
SKIP_USER_CHECK=false

# Mock server responses (for development only)
MOCK_SERVER=false
