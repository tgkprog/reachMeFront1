# Environment-Specific Configuration Template for Flutter
# Copy this file to .local.env, .dev.env, or .prod.env as appropriate.

# Base URL of backend (include port, no trailing slash)
API_BASE_URL=https://reachme2.com:8052

# Google OAuth Web Client ID
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Password login configuration
PASSWORD_LOGIN_ENABLED=true
PASSWORD_LOGIN_ENDPOINT=/user/login

# Polling configuration
DEFAULT_POLL_INTERVAL=60
MIN_POLL_INTERVAL=10
MAX_POLL_INTERVAL=180

# Feature flags
ENABLE_WEB_NOTIFICATIONS=true
DEBUG_MODE=false

# Example DB config (if needed for local dev scripts)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PWD=your_db_password
DB_NAME=reachme_db
